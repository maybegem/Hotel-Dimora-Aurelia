<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar per la navigazione -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Hotel Dimora Aurelia"
        app:titleTextColor="@android:color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp" />

    <!-- Immagine dell'Albergo -->
    <ImageView
        android:id="@+id/imageViewAlbergo"
        android:layout_width="408dp"
        android:layout_height="392dp"
        android:layout_marginTop="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/errore_connessione"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Descrizione dell'Albergo -->
    <TextView
        android:id="@+id/textViewDescrizione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:text="Situato in Via Aurelia Antica, nel cuore della pittoresca cittadina di San Clemente, l’Hotel Dimora Aurelia è un’elegante struttura dal fascino classico. Circondato da colline verdi e giardini curati, offre camere raffinate, una lussuosa spa e un ristorante gourmet chiamato 'La Tavola Aurea'. Perfetto per chi cerca relax e benessere, con un tocco di tradizione e lusso senza tempo."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewAlbergo" />

</androidx.constraintlayout.widget.ConstraintLayout>

