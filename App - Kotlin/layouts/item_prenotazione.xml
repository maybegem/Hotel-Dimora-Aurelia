<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Titolo per i dettagli della prenotazione -->
    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dettagli prenotazione stanza"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Data di Check-In -->
    <TextView
        android:id="@+id/textViewCheckIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Check-In: --"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Data di Check-Out -->
    <TextView
        android:id="@+id/textViewCheckOut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Check-Out: --"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewCheckIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Numero di Adulti -->
    <TextView
        android:id="@+id/textViewAdulti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Adulti: --"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewCheckOut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Numero di Bambini -->
    <TextView
        android:id="@+id/textViewBambini"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bambini: --"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewAdulti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Colazione inclusa -->
    <TextView
        android:id="@+id/textViewColazione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Colazione: --"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewBambini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


