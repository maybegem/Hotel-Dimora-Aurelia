<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:padding="16dp">

    <!-- Messaggio di benvenuto -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:gravity="center"
        android:text="Benvenuto!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Pulsante per visualizzare le prenotazioni -->
    <Button
        android:id="@+id/btnPrenotazioni"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Le Mie Prenotazioni"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Pulsante per una nuova prenotazione -->
    <Button
        android:id="@+id/btnNuovaPrenotazione"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nuova Prenotazione"
        app:layout_constraintTop_toBottomOf="@id/btnPrenotazioni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Pulsante per i servizi extra -->
    <Button
        android:id="@+id/btnServiziExtra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Servizi Extra"
        app:layout_constraintTop_toBottomOf="@id/btnNuovaPrenotazione"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Pulsante per le informazioni sull'albergo -->
    <Button
        android:id="@+id/btnInfoAlbergo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Info Albergo"
        app:layout_constraintTop_toBottomOf="@id/btnServiziExtra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Pulsante per modificare il profilo -->
    <Button
        android:id="@+id/btnProfilo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Profilo"
        app:layout_constraintTop_toBottomOf="@id/btnInfoAlbergo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Bottone per il logout -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnProfilo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
